/* pages/fresh/fresh.wxss */
/* 组件白色背景 */
page{
  background:#fff;
}
/*当前商品条目*/
.shop{
  padding:20rpx;
  border:1rpx solid #ddd;
  display:flex;
  position: relative;
}
/*当前商品图片*/
.shop-img{
  width:170rpx;
  height:150rpx;
  margin-right:20rpx;
}
/*中间字体*/
.shop-info{
  width:520rpx;
  font-size:12px;
  color:#666;
  display: flex;
  flex-direction: column;
  line-height: 1.5;
}
.shop-title{
  font-size:15px;
  color:#333;
  width:380rpx;
}